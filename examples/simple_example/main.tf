  secret  = var.atlas_public_key_secret 
  version = "latest"           
}

data "google_secret_manager_secret_version" "atlas_private_key" {
  project = var.gcp_project_id
  secret  = var.atlas_private_key_secret 
  version = "latest"           
}

module "mongo_db" {

 source = "../../modules"
 atlas_project_name = var.atlas_project_name
 suffix = var.suffix
